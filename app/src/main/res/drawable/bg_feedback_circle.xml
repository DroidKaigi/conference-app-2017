<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_selected="false">
        <shape android:shape="oval">
            <stroke android:width="@dimen/border_1dp" android:color="@color/grey500" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="@dimen/border_1dp" android:color="@color/grey500" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/black_alpha_12" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false" android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/theme" />
            <stroke android:width="@dimen/border_1dp" android:color="@color/dark_theme" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/theme" />
                    <stroke android:width="@dimen/border_1dp" android:color="@color/dark_theme" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/black_alpha_12" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
