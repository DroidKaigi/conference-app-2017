<resources>

    <style name="InfoTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:textAppearance">@style/TextSubheading</item>
    </style>

    <style name="InfoDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/grey600</item>
        <item name="android:textAppearance">@style/TextCaption</item>
    </style>

</resources>
